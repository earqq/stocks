{
    "name": "jobsity/slim-challenge",
    "description": "PHP Challenge - Jobsity",
    "type": "project",
    "require": {
        "php": "^7.3 || ^8.0",
        "slim/slim": "^4.7",
        "slim/psr7": "^1.3",
        "swiftmailer/swiftmailer": "^6.0",
        "php-di/php-di": "^6.3",
        "symfony/dotenv": "^5.2",
        "tuupola/slim-basic-auth": "^3.3",
        "php-amqplib/php-amqplib": "^3.0",
        "ext-json": "*",
        "illuminate/database": "~5.1",        
        "firebase/php-jwt": "^5.5",
        "tuupola/base62": "^2.1",
        "tuupola/cors-middleware": "^1.4",
        "tuupola/slim-jwt-auth": "^3.7",
        "monolog/monolog": "^2.8",
        "lulco/phoenix": "^2.3",
        "vlucas/phpdotenv": "^5.5"
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "kylekatarnls/update-helper": true
        },
        "process-timeout": 0
    }
}
